        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Evaware"
        tools:targetApi="31">
        <activity
            android:name=".presentation.payment.PaymentListActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.other.Setting"
            android:exported="false" />
        <activity
            android:name=".presentation.search_product.SearchProductActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.new_review.FullScreenImageActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.new_review.NewReviewActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.filter.Filter"
            android:exported="false" />
        <activity
            android:name=".presentation.review.ReviewsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.product.ProductActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.catalog.CatalogActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.category.SearchCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.address.ChooseProvinceActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.address.AddAddressActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.address.AddressBookActivity"
            android:exported="false" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />

        <activity
            android:name=".presentation.checkout.SuccessActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.checkout.ConfirmOrderActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.checkout.PaymentMethodActivity"
            android:exported="false"
            android:label="@string/title_activity_payment_method"
            android:theme="@style/Theme.Evaware.NoActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.base.MainActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.checkout.DeliveryAddressActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.checkout.ContactInfoActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.other.Opening"
            android:exported="false" />
        <activity
            android:name=".presentation.auth.TestLoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
    </application>

</manifest>