<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.user.UserFragment">

    <RelativeLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/main_frame">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingHorizontal="10dp"
            android:src="@drawable/arrow_left"
            android:contentDescription="..."/>

        <TextView
            android:id="@+id/title"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lexend_semibold"
            android:text="@string/my_orders"
            android:textAppearance="@style/my_orders"
            android:lineSpacingExtra="0sp"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:background="@drawable/search">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/search_bar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <SearchView
                android:id="@+id/search_view"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:contentDescription="Search"/>
            <EditText
                android:id="@+id/sr_edit_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="56dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:hint="Search"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/s_and_f"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="142dp"
        android:background="@drawable/sorting_and">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/small_secon"
            android:layout_width="164dp"
            android:layout_height="36dp"
            android:background="@drawable/small_secon"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn_sort"
                android:background="@drawable/btn_sort"
                android:contentDescription="btn_sort"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="164dp"
            android:layout_height="36dp"
            android:id="@+id/small_secon_2"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/small_secon">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn_filter"
                android:background="@drawable/btn_filter"
                android:contentDescription="btn_filter"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">
    <LinearLayout
        android:id="@+id/order_1"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:orientation="vertical"
        android:background="@drawable/order">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/order_info_1"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/order_info"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/date_and_st_1"
                android:layout_width="270dp"
                android:layout_height="47dp"
                android:background="@drawable/dt_and_st">
                <TextView
                    android:id="@+id/time_1"
                    android:layout_width="270dp"
                    android:layout_height="24dp"
                    android:text="@string/time_1"
                    android:textAppearance="@style/time_1"
                    android:lineSpacingExtra="0sp"
                    android:fontFamily="@font/lexend_semibold"
                    android:gravity="top"/>
                <TextView
                    android:id="@+id/stt_1"
                    android:layout_width="270dp"
                    android:layout_height="21dp"
                    android:text="@string/stt_1"
                    android:textAppearance="@style/stt_1"
                    android:layout_marginTop="26dp"
                    android:gravity="top"
                    />
            </RelativeLayout>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/price_and_order_1"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="278dp"
                android:background="@drawable/price_and_order">
                <TextView
                    android:id="@+id/price_1"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:text="@string/price"
                    android:textAppearance="@style/price"
                    android:lineSpacingExtra="0sp"
                    android:gravity="right|top"
                    android:fontFamily="@font/lexend_semibold"
                    />
                <TextView
                    android:id="@+id/product_code_1"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:text="@string/product_code"
                    android:textAppearance="@style/product_code"
                    android:lineSpacingExtra="0sp"
                    android:gravity="right|top"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/order_img_1"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/order_img">
            <RelativeLayout
                android:id="@+id/prd_pic_1.1"
                android:layout_width="60dp"
                android:layout_height="73dp"
                android:background="@drawable/product_pic">
            <ImageButton
                android:id="@+id/product_1.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/delivery_1"
                android:contentDescription="order 1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/prd_pic_1.2"
                android:layout_width="60dp"
                android:layout_height="73dp"
                android:layout_marginLeft="72dp"
                android:background="@drawable/product_pic">
                <ImageButton
                    android:id="@+id/product_1.2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/delivery_2"
                    android:contentDescription="order 2"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
        <LinearLayout
            android:id="@+id/order_2"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginTop="168dp"
            android:orientation="vertical"
            android:background="@drawable/order">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/order_info_2"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/order_info"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/date_and_st_2"
                    android:layout_width="270dp"
                    android:layout_height="47dp"
                    android:background="@drawable/dt_and_st">
                    <TextView
                        android:id="@+id/time_2"
                        android:layout_width="270dp"
                        android:layout_height="24dp"
                        android:text="@string/time_2"
                        android:textAppearance="@style/time_2"
                        android:lineSpacingExtra="0sp"
                        android:fontFamily="@font/lexend_semibold"
                        android:gravity="top"/>
                    <TextView
                        android:id="@+id/stt_2"
                        android:layout_width="270dp"
                        android:layout_height="21dp"
                        android:text="@string/stt_2"
                        android:textAppearance="@style/stt_2"
                        android:layout_marginTop="26dp"
                        android:gravity="top"
                        />
                </RelativeLayout>
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/price_and_order_2"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="278dp"
                    android:background="@drawable/price_and_order">
                    <TextView
                        android:id="@+id/price_2"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="@string/price_"
                        android:textAppearance="@style/price_"
                        android:lineSpacingExtra="0sp"
                        android:gravity="right|top"
                        android:fontFamily="@font/lexend_semibold"
                        />
                    <TextView
                        android:id="@+id/product_code_2"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:text="@string/product_code_"
                        android:textAppearance="@style/product_code_"
                        android:lineSpacingExtra="0sp"
                        android:gravity="right|top"
                        android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_img"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/order_img">
                <RelativeLayout
                    android:id="@+id/prd_pic_2.1"
                    android:layout_width="60dp"
                    android:layout_height="73dp"
                    android:background="@drawable/product_pic">
                    <ImageButton
                        android:id="@+id/product_2.1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/delivery_3"
                        android:contentDescription="order 1"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/prd_pic_2.2"
                    android:layout_width="60dp"
                    android:layout_height="73dp"
                    android:layout_marginLeft="72dp"
                    android:background="@drawable/product_pic">
                    <ImageButton
                        android:id="@+id/product_2.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/delivery_4"
                        android:contentDescription="order 2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/prd_pic_2.3"
                    android:layout_width="60dp"
                    android:layout_height="73dp"
                    android:layout_marginLeft="144dp"
                    android:background="@drawable/product_pic">
                    <ImageButton
                        android:id="@+id/product_2.3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/delivery_5"
                        android:contentDescription="order 3"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>