<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_account"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <!-- search -->
        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/main_fr">
                <!-- arrow-left -->
                <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow_left" />

                <EditText
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#F5F5F5"
                    android:fontFamily="@font/lexend_medium"
                    android:paddingLeft="16dp"
                    android:textColorLink="#F5F5F5" />

                <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_mic" />
            </RelativeLayout>
        </RelativeLayout>
<!--Add searched item in a flow-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <View
                android:id="@+id/icon_clock"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_clock"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/icon_clock"
                android:layout_alignEnd="@+id/clear"
                android:layout_marginHorizontal="36dp"
                android:text="Item 1"
                android:textColor="#090808"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_x"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="370dp"
                android:layout_marginEnd="16dp" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>