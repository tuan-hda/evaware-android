<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2B2B"
    >
    <!-- Popover -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/popover"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_marginHorizontal="32dp"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        >
        <!-- text-frame -->
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/text_frame"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            >
            <!-- Headline -->
            <TextView
                android:id="@+id/headline"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:text="are you sure you want to sign out?"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:textColor="#212121"
                android:lineSpacingExtra="-4sp"
                android:gravity="center_horizontal|top"
                />
<!--            description-->
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_below="@+id/headline"
                android:text="We definitely don\'t want that"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:textColor="#9E9E9E"
                android:lineSpacingExtra="-4sp"
                android:gravity="center_horizontal|top"
                />
        </RelativeLayout>
        <Button
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/first_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/text_frame"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="No, I want to stay"
            android:layout_centerHorizontal="true"
            android:textColor="#212121"
            android:layout_marginHorizontal="16dp"
            android:background="#FFEB3B"
            />
        <Button
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/second_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/first_button"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="Yep, sign out"
            android:layout_centerHorizontal="true"
            android:textColor="#212121"
            android:layout_marginHorizontal="16dp"
            android:background="#F5F5F5"
            />

    </RelativeLayout>



</RelativeLayout>