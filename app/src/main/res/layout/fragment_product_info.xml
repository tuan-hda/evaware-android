<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="66dp"
    tools:context=".presentation.bottomSheet.ProductInfoDialog">

    <ImageButton
        android:id="@+id/ibtn_close"
        android:layout_width="24dp"
        android:layout_height="36dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_close" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_semibold"
        android:paddingBottom="16dp"
        android:text="Product information"
        android:textSize="@dimen/heading_1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_semibold"
        android:paddingVertical="16dp"
        android:text="Measurements"
        android:textSize="@dimen/heading_2" />
    <!--    Height-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_measurements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_semibold"
        android:paddingVertical="16dp"
        android:text="Composition"
        android:textSize="@dimen/heading_2" />
    <!--    Height-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_composition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>