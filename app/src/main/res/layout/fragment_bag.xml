<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.bag.BagFragment">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/lexend_semibold"
        android:paddingHorizontal="16dp"
        android:text="@string/bag"
        android:textColor="@color/black"
        android:textSize="@dimen/heading_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_empty_bag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:height="64dp"
            android:background="@drawable/round_button"
            android:fontFamily="@font/lexend_medium"
            android:text="@string/start_shopping"
            android:textSize="@dimen/body_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lexend_semibold"
            android:text="@string/your_bag_is_empty"
            android:textColor="@color/black"
            android:textSize="@dimen/heading_2"
            app:layout_constraintBottom_toTopOf="@+id/txt_description"
            app:layout_constraintEnd_toEndOf="@+id/txt_description"
            app:layout_constraintStart_toStartOf="@+id/txt_description"
            app:layout_constraintTop_toBottomOf="@+id/img_surprised" />

        <ImageView
            android:id="@+id/img_surprised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/surprised_image"
            android:src="@drawable/surprised"
            app:layout_constraintBottom_toTopOf="@+id/txt_empty"
            app:layout_constraintEnd_toEndOf="@+id/txt_empty"
            app:layout_constraintStart_toStartOf="@+id/txt_empty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="310dp"
            android:layout_height="39dp"
            android:layout_marginTop="4dp"
            android:text="@string/items_remain_in_your_bag_for_1_hour_and_then_they_re_moved_to_your_saved_items"
            android:textAlignment="center"
            android:textColor="@color/giratina_500"
            android:textSize="@dimen/body_1"
            app:layout_constraintBottom_toTopOf="@+id/btn_start_shopping"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_empty" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_bag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <ListView
                android:id="@+id/list_bag_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="@string/promocode"
                android:textColor="@color/black"
                android:textSize="@dimen/heading_2"
                app:layout_constraintTop_toBottomOf="@+id/list_bag_item"
                tools:layout_editor_absoluteX="34dp" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/text_field_background"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="16dp">

                <EditText
                    android:id="@+id/edt_promo"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="16dp"
                    android:layout_toStartOf="@+id/btn_clear_promo"
                    android:background="@color/transparent"
                    android:fontFamily="@font/lexend"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_1" />

                <ImageButton
                    android:id="@+id/btn_clear_promo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:contentDescription="Clear promotion"
                    android:src="@drawable/clear"
                    android:tint="@color/black"
                    app:tint="@color/black" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="total"
                android:textColor="@color/black"
                android:textSize="@dimen/heading_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

            <TextView
                android:id="@+id/text_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lexend"
                android:text="Promocode"
                android:textColor="@color/giratina_500"
                android:textSize="@dimen/body_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_total" />

            <TextView
                android:id="@+id/text_promo_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lexend"
                android:text="-$25,00"
                android:textColor="@color/giratina_500"
                android:textSize="@dimen/body_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_total_price" />

            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="$420,50"
                android:textColor="@color/black"
                android:textSize="@dimen/heading_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_checkout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/lexend_medium"
                android:text="Checkout"
                android:textColor="@color/black"
                android:textSize="@dimen/body_1"
                app:layout_constraintTop_toBottomOf="@+id/text_promo" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>