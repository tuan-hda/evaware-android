<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/knob"
            android:layout_width="56dp"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/knob_drawable" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"

        android:orientation="vertical"
        android:padding="@dimen/fab_margin">


        <ImageButton
            android:id="@+id/close_bts"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:src="@drawable/ic_close" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend_semibold"
            android:text="@string/new_card"
            android:textSize="@dimen/heading_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lexend"
            android:text="Card number"
            android:textColor="@color/black"
            android:textSize="@dimen/body_1" />

        <EditText
            android:id="@+id/edt_card_number"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_card"
            android:drawableEnd="@drawable/ic_visa"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lexend"
                    android:text="@string/expired_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_1" />

                <EditText
                    android:id="@+id/edt_expired_date"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="4dp"
                    android:inputType="date" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lexend"
                    android:text="CVC/CVV"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_1" />

                <EditText
                    android:id="@+id/edt_security_code"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:inputType="numberPassword" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lexend"
            android:text="Name on card"
            android:textColor="@color/black"
            android:textSize="@dimen/body_1" />

        <EditText
            android:id="@+id/edt_name_on_card"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="4dp"

            android:inputType="text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_card"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/lexend_semibold"
            android:text="@string/save_card" />

        <View
            android:layout_width="100dp"
            android:layout_height="1000dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</LinearLayout>