<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Evaware" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charizard_400</item>
        <item name="colorPrimaryVariant">@color/charizard_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="SearchText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/body_1</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:background">@drawable/text_field_background</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">45dp</item>
    </style>
    <style name="Theme.Evaware.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Evaware.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Evaware.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Evaware.CustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/body_1</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:background">@drawable/text_field_background</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
    </style>

    <style name="EditTextLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textSize">@dimen/body_1</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/body_1</item>
    </style>

    <style name="MaterialButton" parent="ThemeOverlay.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/body_1</item>
    </style>

    <style name="SecondaryMaterialButton" parent="ThemeOverlay.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/giratina_100</item>
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/body_1</item>
    </style>
</resources>